<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/semi_transparent_bk_light"
    android:layout_margin="8dp"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_2dp">

<!--    original name: tv_location_rv_main-->

    <TextView
        android:id="@+id/tv_location_rv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="transition_location"
        android:textSize="@dimen/text_24sp"
        android:textColor="@color/light_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date_rv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_text_color"
        android:textSize="@dimen/text_16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cost_rv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_text_color"
        android:textSize="@dimen/text_16sp"
        android:layout_margin="@dimen/dimen_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_location_rv_main" />
</androidx.constraintlayout.widget.ConstraintLayout>